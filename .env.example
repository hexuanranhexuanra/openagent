# ──────────────────────────────────────
# OpenAgent Configuration
# Copy to .env and fill in your values
# ──────────────────────────────────────

# Gateway
GATEWAY_PORT=19090
GATEWAY_HOST=127.0.0.1

# LLM Providers
OPENAI_API_KEY=sk-xxxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
# For ByteDance GenAI (query-param auth), uncomment:
# OPENAI_API_KEY=unused
# OPENAI_BASE_URL=https://gpt-i18n.byteintl.net/gpt/openapi/online/v1
# OPENAI_MODEL=gpt-5.2-codex-2026-01-14
# OPENAI_QUERY_AK=your_ak_here

ANTHROPIC_API_KEY=sk-ant-xxxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Default provider: "openai" | "anthropic"
DEFAULT_PROVIDER=openai

# Auth (optional, protects /api/* routes)
GATEWAY_AUTH_TOKEN=

# Feishu/Lark (optional)
LARK_APP_ID=cli_xxxxxxxx
LARK_APP_SECRET=xxxxxxxx
LARK_ENCRYPT_KEY=xxxxxxxx
LARK_VERIFICATION_TOKEN=xxxxxxxx
# Reply mode: "sync" (inline reply) | "async" (via worker queue, default)
FEISHU_REPLY_MODE=async

# Logging: "debug" | "info" | "warn" | "error"
LOG_LEVEL=info
